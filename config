bindsym Control+Shift+3 exec "fcitx-remote -s sogoupinyin"
bindsym Control+Shift+4 exec "fcitx-remote -s hangul"

# fire up applications
exec --no-startup-id i3-msg 'move workspace '$workspace1' to output left'
exec --no-startup-id i3-msg 'move workspace '$workspace2' to output right'
exec --no-startup-id i3-msg 'move workspace '$workspace3' to output right'

exec --no-startup-id i3-msg 'workspace '$workspace1'; exec /usr/bin/google-chrome'
exec --no-startup-id i3-msg 'workspace '$workspace2'; exec /usr/local/bin/emacs'
exec --no-startup-id i3-msg 'workspace '$workspace3'; exec /usr/bin/gnome-terminal'